<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Emergency Contact List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_above="@+id/phoneText1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:text="+1"
        android:ems="2"
        android:id="@+id/editText1"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignBaseline="@+id/phoneText3"
        android:layout_alignBottom="@+id/phoneText3"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:text="+1"
        android:ems="2"
        android:id="@+id/editText2"
        android:editable="false"
        android:layout_alignBaseline="@+id/phoneText1"
        android:layout_alignBottom="@+id/phoneText1"
        android:layout_alignStart="@+id/textView3"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:text="+1"
        android:ems="2"
        android:id="@+id/editText3"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignBaseline="@+id/phoneText2"
        android:layout_alignBottom="@+id/phoneText2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="7"
        android:id="@+id/phoneText1"
        android:hint="Enter Phone #1"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/phoneText2"
        android:layout_alignStart="@+id/phoneText3"
        android:maxLength="10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="7"
        android:id="@+id/phoneText2"
        android:hint="Enter Phone #2"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/phoneText3"
        android:layout_alignStart="@+id/phoneText1"
        android:maxLength="10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="7"
        android:id="@+id/phoneText3"
        android:hint="Enter Phone #3"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_weight="0.02"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/register"
        android:layout_centerHorizontal="true"
        android:maxLength="10" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textAutoComplete|textMultiLine|textShortMessage"
        android:ems="10"
        android:id="@+id/messageText"
        android:hint='Please enter the message you would like to send to your emergency contacts here: Sample message would say "Hello, an unintended fall has been detected at the following location. Please get help!"'
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

</RelativeLayout>